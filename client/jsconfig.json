{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "@Helpers/*": ["./src/helpers/*"],
      "@Assets/*": ["./src/assets/*"],
      "@Components/*": ["./src/components/*"],
      "@Context/*": ["./src/context/*"],
      "@Modules/*": ["./src/modules/*"],
      "@Pages/*": ["./src/pages/*"],
      "@Redux/*": ["./src/redux/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", "build"]
}
